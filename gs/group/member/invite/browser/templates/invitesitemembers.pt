<html metal:use-macro="context/@@groupserver_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/label}: ${view/groupInfo/name}: ${view/siteInfo/name}">
        Add Site Members
      </span>
    </title>
  </head>
  <body>
    <div metal:fill-slot="messages" tal:condition="view/status" 
      class="message-error"
      tal:define="e view/errors"
      tal:attributes="class python:e and 'message-error' or 'message-result'">
      <p class="form-status" tal:content="structure view/status"/>
      <dl tal:condition="view/errors">
        <tal:block repeat="widget view/widgets">
          <tal:block tal:condition="widget/error">
            <dt tal:content="widget/label">Widget Name</dt>
            <dd class="error" 
              tal:content="structure widget/error">Error message</dd>
          </tal:block>
        </tal:block>
      </dl>
    </div>
    <tal:block metal:fill-slot="body">
      <form enctype="multipart/form-data"  method="post" action="."
        tal:attributes="action request/URL" id="invite-site-members">
        <h1 tal:content="view/label">Invite Site Members</h1>
        <p>
          To invite existing site members to join
          <span class="group" 
            tal:content="view/groupInfo/name">this group</span>,
          select them from the list of site members below and click the
          <samp class="button" 
            tal:define="action python:[a for a in view.actions][0].label"
            tal:content="action">Big R</samp> 
          button.
        </p>
        <div id="invitation">
          <h2>Invitation</h2>
          <p>
            The invitation message will be sent as an email. 
            You can change the subject and body message by altering the
            fields below.
          </p>
          <tal:block 
            define="widgets python:[view.widgets['fromAddr'], view.widgets['subject'], view.widgets['message']]">
            <tal:block replace="structure provider:groupserver.FormWidgets"/>
          </tal:block>
        </div> 
        <h2>People to Invite</h2>
        <p>
          The invitation will be sent to all the site members you 
          select in the list below.
        </p>
        <tal:block define="widgets python:[view.widgets['site_members']]">
          <tal:block replace="structure provider:groupserver.FormWidgets"/>
        </tal:block>
        <div class="noFloat">&#160;</div>
        <h2>Delivery Settings</h2>
        <p>
          You can set the inital message delivery settings for the
          people you invite below.
        </p>
        <tal:block define="widgets python:[view.widgets['delivery']]">
          <tal:block replace="structure provider:groupserver.FormWidgets"/>
        </tal:block>
        <div class="noFloat">&#160;</div>
        <div class="buttons" tal:condition="view/availableActions">
          <tal:block repeat="action view/actions">
            <div class="formelementbutton">
              <span tal:replace="structure action/render">Button</span>
            </div>
          </tal:block>
        </div><!--buttons-->
      </form>
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <script type="text/javascript"
        src="/++resource++check_required-20071214.js">&#160;</script>
      <script type="text/javascript"
        tal:define="widgets view/widgets; 
          button string:#form\\.actions\\.invite"
        tal:content="provider:groupserver.RequiredWidgetsJavaScript">
        alert("I have not been replaced.");
      </script>
      <script type="text/javascript"
        src="/++resource++popup_help-20071218.js">&#160;</script>
      <script type="text/javascript">
        jQuery.noConflict()
        jQuery(document).ready( function () {
            GSPopupFormHelp.init('#invite-site-members');
        });
      </script>
    </tal:block>
  </body>
</html>

