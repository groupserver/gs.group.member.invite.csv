<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           i18n_domain="groupserver">

   <include package="zope.viewlet" file="meta.zcml" />

 <browser:page
    name="admin_invite_csv.html"
    for="gs.group.base.interfaces.IGSGroupMarker"
    class="gs.group.base.GroupPage"
    template="browser/templates/invite.pt"
    permission="zope2.ManageUsers"/>

  <browser:page
    name="admin_join_invite_csv.html"
    for="gs.group.base.interfaces.IGSGroupMarker"
    class=".create_users_from_csv.CreateUsersInviteForm"
    template="browser/templates/admin_create_users_from_csv.pt"
    permission="zope2.ManageUsers"/>

  <browser:page
    name="admin_join_add_csv.html"
    for="gs.group.base.interfaces.IGSGroupMarker"
    class=".create_users_from_csv.CreateUsersAddForm"
    template="browser/templates/admin_create_users_from_csv.pt"
    permission="zope2.ManageUsers"/>

  <!--browser:page
    for="Products.GSContent.interfaces.IGSSiteFolder"
    name="admin_join_add_csv.html"
    class=".site.CreateUsersAddSiteForm"
    template="browser/templates/admin_create_users_from_csv_site.pt"
    permission="zope2.ManageUsers"/-->

  <browser:page
    name="csv_to_json.html"
    for="gs.group.base.interfaces.IGSGroupMarker"
    class=".csv_to_json.CSVJsonForm"
    permission="zope2.ManageUsers"/>

  <browser:page
    name="csv.json"
    for="gs.group.base.interfaces.IGSGroupMarker"
    class=".csv_to_json.CSVJson"
    permission="zope2.ManageUsers"/>

  <!-- Link to the page -->
  <browser:viewlet
    name="gs-group-member-invite-csv-home-link"
    manager="gs.group.member.info.interfaces.IGroupMemberAdminLinks"
    class="gs.group.member.viewlet.GroupAdminViewlet"
    template="browser/templates/link.pt"
    permission="zope2.ManageUsers"
    weight="15"
    title="Invite Members by CSV" />
</configure>
